@model Warehouse.Models.WareHouse
@using Warehouse.Resources
@{
    ViewData["Title"] = "Create";
}
@inject LocService SharedLocalizer

<form asp-action="create" asp-controller="WareHouse" method="post" asp-antiforgery="true">
    <div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Number">@SharedLocalizer.GetLocalizedHtmlString("NumberOfWarehouse")</label>
            <input type="text" asp-for="Number" class="form-control"/>
            <span asp-validation-for="Number"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">@SharedLocalizer.GetLocalizedHtmlString("Address")</label>
            <input asp-for="Address" type="text" class="form-control" />
            <span asp-validation-for="Address"></span>
        </div>
        <div>
            <input type="submit" value="Create" />
        </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}