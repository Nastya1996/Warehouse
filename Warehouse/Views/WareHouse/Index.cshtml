@model IEnumerable<Warehouse.Models.WareHouse>
@{
    ViewData["Title"] = "Index";
}

<h1>WareHouse</h1>
<form method="get" asp-action="Index">
    <div class="form-inline form-group">
        <label class="control-label">Warehouse Number: </label>
        <input type="text" name="type" value="@ViewData["CurrentNumber"]" />

        <label class="control-label">Warehouse Address: </label>
        <input type="text" name="name" value="@ViewData["CurrentAddress"]" />

        <label class="control-label">Page size</label>
        <input type="number" min="1" name="pageSize" value="@ViewData["CurrentSize"]" />
        <input type="submit" value="Filter" class="btn btn-default" />
    </div>
</form>
<a asp-action="Create" asp-controller="WareHouse">Create New</a>
<table class="table table-bordered table-hover">
    <thead>
        @{ 
            var w = new WareHouse();
        }
        <tr>
            @*<th>@Html.DisplayNameFor(m => m.Number)</th>*@
            @*<th>@Html.DisplayNameFor(m => m.Address)</th>*@
            <th>@w.Number</th>
            <th>@w.Address</th>
            <th>Edit</th>
            <th>Disable</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="8" class="text-center">There are no warehouses!</td></tr>
        }
        @{
            foreach (var wh in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(item => wh.Number)</td>
                    <td>@Html.DisplayFor(item => wh.Address)</td>
                    <td><a asp-action="Edit" asp-route-id="@wh.Id">Edit</a></td>
                    <td><a asp-action="" asp-route-id="@wh.Id">Disable</a></td>
                </tr>
            }
        }
    </tbody>
    
</table>

