@using Warehouse.Models

@{
    ViewData["Title"] = "Index";
}
@model IPagedList<WareHouse>


@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<h2>@Localizer["Product"]</h2>
<h3>@Localizer["User"]</h3>
<h1>WareHouse</h1>
<form method="get" asp-action="Index">
    <div class="form-inline form-group">
        <label class="control-label">Warehouse Number: </label>
        <input type="text" name="number" value="@ViewData["CurrentNumber"]" />

        <label class="control-label">Warehouse Address: </label>
        <input type="text" name="address" value="@ViewData["CurrentAddress"]" />

        <label class="control-label">Page size</label>
        <input type="number" min="1" name="pageSize" value="@ViewData["CurrentSize"]" />
        <input type="submit" value="Filter" class="btn btn-default" />
    </div>
</form>
<pager list="@Model" asp-route-pageSize="@ViewData["CurrentSize"]" asp-route-number="@ViewData["CurrentNumber"]" asp-route-address="@ViewData["CurrentAddress"]" asp-controller="WareHouse" asp-action="Index" />
<a asp-action="Create" asp-controller="WareHouse">Create New</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Number</th>
            <th>Address</th>
            <th>Edit</th>
            <th>Disable</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="8" class="text-center">There are no warehouses!</td></tr>
        }
        @{
            foreach (var wh in Model)
            {
                <tr>
                    <td>@wh.Number</td>
                    <td>@wh.Address</td>
                    <td><a asp-action="Edit" asp-route-id="@wh.Id">Edit</a></td>
                    <td><a asp-action="" asp-route-id="@wh.Id">Disable</a></td>
                </tr>
            }
        }
    </tbody>

</table>


