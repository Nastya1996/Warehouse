@model IEnumerable<Warehouse.Models.Unit>
@{
    ViewData["Title"] = "Index";
}
@using Warehouse.Resources

@inject LocService SharedLocalizer
<br />
<br />

<a asp-action="Create" asp-controller="Unit">Create new</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@SharedLocalizer.GetLocalizedHtmlString("Edit")</th>
            <th>@SharedLocalizer.GetLocalizedHtmlString("Delete")</th>
            <th>@SharedLocalizer.GetLocalizedHtmlString("Details")</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var unit in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(item => unit.Name)</td>
                    <td><a asp-action="Edit" asp-route-id="@unit.Id">@SharedLocalizer.GetLocalizedHtmlString("Edit")</a></td>
                    <td><a asp-action="Delete" asp-route-id="@unit.Id">@SharedLocalizer.GetLocalizedHtmlString("Delete")</a></td>
                    <td><a asp-action="Details" asp-route-id="@unit.Id">@SharedLocalizer.GetLocalizedHtmlString("Details")</a></td>
                </tr>
            }
        }
    </tbody>
</table>
