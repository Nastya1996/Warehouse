@using Warehouse.Models
@{
    ViewData["Title"] = "Index";
}
@using Warehouse.Resources

@inject LocService SharedLocalizer
@model ProductViewModel

<form asp-action="Index" method="get">
    <select asp-for="TypeId" asp-items="ViewBag.Types">
        <option selected value="">All types</option>
    </select>

    <label class="control-label">@SharedLocalizer.GetLocalizedHtmlString("ProductName"):</label>
    <input asp-for="ProductName" />

    <label class="control-label">@SharedLocalizer.GetLocalizedHtmlString("PageSize"):</label>
    <input type="number" min="1" max="100" asp-for="PageSize" />

    <input type="submit" value="Filter" class="btn btn-default" />
</form>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                <a asp-route-PageSize="@Model.PageSize" asp-route-TypeId="@Model.TypeId" asp-route-ProductId="@Model.ProductName" asp-action="Index" asp-route-sortOrder="@ViewBag.ProductNameSort">@SharedLocalizer.GetLocalizedHtmlString("Name")</a>
            </th>
            <th>@SharedLocalizer.GetLocalizedHtmlString("Barcode")</th>
            <th>@SharedLocalizer.GetLocalizedHtmlString("ProductType")</th>
            <th>@SharedLocalizer.GetLocalizedHtmlString("Unit")</th>
            @if (User.IsInRole("Admin"))
            {
                <th>@SharedLocalizer.GetLocalizedHtmlString("DisableEnable")</th>
            }
            else
            {
                <th>@SharedLocalizer.GetLocalizedHtmlString("Edit")</th>
            }
            <th>@SharedLocalizer.GetLocalizedHtmlString("Image")</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.paged.Count == 0)
        {
            <tr><td colspan="6" class="text-center">@SharedLocalizer.GetLocalizedHtmlString("ThereAreNoProducts")</td></tr>
        }
        else
        {
            @foreach (var pt in ViewBag.paged)
            {
                <tr>
                    <td hidden="hidden"><input id="id" type="hidden" value="@pt.Id" /></td>
                    <td>@pt.Name</td>
                    <td>@pt.Barcode</td>
                    <td>@pt.ProductType?.Name</td>
                    <td>@pt.Unit.Name</td>
                    @if (User.IsInRole("Admin"))
                    {
                        @if (pt.IsActive == true)
                        {
                            <td><a href="#" class="Disable">@SharedLocalizer.GetLocalizedHtmlString("Disable")</a></td>
                        }
                        else
                        {
                            <td><a href="#" class="Enable">@SharedLocalizer.GetLocalizedHtmlString("Enable")</a></td>
                        }
                    }
                    else
                    {
                        <td><a asp-action="Edit" asp-route-id="@pt.Id">@SharedLocalizer.GetLocalizedHtmlString("Edit")</a></td>
                    }
                    @if (pt.FileModelImg != null)
                    {
                        <td><img src="@Url.Content(pt.FileModelImg.Path)"></td>
                    }
                    else
                    {
                        <td><img src="/Files/warehouse-cartoon-vector-7197735.jpg"></td>
                    }

                </tr>
            }
        }
    </tbody>
</table>
<pager list="@ViewBag.paged" asp-route-pageSize="@Model.PageSize" asp-route-ProductName="@Model.ProductName" asp-route-TypeId="@Model.TypeId" asp-controller="Product" asp-action="Index" />

@section scripts{
    <script src="~/lib/jquery/dist/chosen.jquery.min.js"></script>
    <link href="~/css/chosen.css" rel="stylesheet" />
    <link href="~/css/jquery.contextMenu.css" rel="stylesheet" />
    <script src="~/js/jquery.contextMenu.js"></script>
    <script src="~/js/jquery.ui.position.js"></script>
    <link href="~/css/jquery-confirm.min.css" rel="stylesheet" />
    <script src="~/js/jquery-confirm.min.js"></script>
    <script src="~/js/product.js"></script>
    <script>
        jQuery(function ($) {
            $("input[type='phone']").mask("+7 (999) 999-9999");
        });
        $("#TypeId").chosen({
            search_contains: true,
            width: "15%"
        });
    </script>
}