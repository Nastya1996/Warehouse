@using Warehouse.Models
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Product>
<a asp-action="Create">Create New</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.ProductNameSort">
                Name
            </a>

            <th>Bar Code</th>
            <th>Product Type</th>
            <th>Unit</th>
            <th>Edit</th>
            <th>Details</th>
            @if (User.IsInRole("Admin"))
            {
                <td>Disable \ Enable</td>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="6" class="text-center">There are no products!</td></tr>
        }
        else
        {
            @foreach (var pt in Model)
            {
                <tr>
                    <td hidden="hidden"><input id="id" type="hidden" value="@pt.Id" /></td>
                    <td>@pt.Name</td>
                    <td>@pt.Barcode</td>
                    <td>@pt.ProductType?.Name</td>
                    <td>@pt.Unit?.Name</td>
                    <td><a asp-action="Edit" asp-route-id="@pt.Id">Edit</a></td>
                    <td><a asp-action="Details" asp-route-id="@pt.Id">Details</a></td>
                    @if (User.IsInRole("Admin"))
                    {
                        @if (pt.IsActive == true)
                        {
                            <td><a href="#" class="Disable">Disable</a></td>
                        }
                        else
                        {
                            <td><a href="#" class="Enable">Enable</a></td>
                        }
                    }
                </tr>
            }
        }
    </tbody>
</table>

<!--Modal----product activation and deactivation-->
<div class="modal" id="prodModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h3 class="modal-title text-center ">Products</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3 class="text-center text-primary" id="prodText"></h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
    <script src="~/js/product.js"></script>
}