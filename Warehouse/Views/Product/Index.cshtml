@using Warehouse.Models
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Product>
<a asp-action="Create">Create New</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.ProductNameSort">
                Name
            </a>

            <th>Bar Code</th>
            <th>Product Type</th>
            <th>Unit</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Disable \ Enable</th>
            }
            else
            {
                <th>Edit</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="6" class="text-center">There are no products!</td></tr>
        }
        else
        {
            @foreach (var pt in Model)
            {
            <tr>
                <td hidden="hidden"><input id="id" type="hidden" value="@pt.Id" /></td>
                <td>@pt.Name</td>
                <td>@pt.Barcode</td>
                <td>@pt.ProductType?.Name</td>
                <td>@pt.Unit?.Name</td>
                @if (User.IsInRole("Admin"))
                {
                    @if (pt.IsActive == true)
                    {
                        <td><a href="#" class="Disable">Disable</a></td>
                    }
                    else
                    {
                        <td><a href="#" class="Enable">Enable</a></td>
                    }
                }
                else
                {
                    <td><a asp-action="Edit" asp-route-id="@pt.Id">Edit</a></td>
                }
            </tr>
            }
        }
    </tbody>
</table>



@section scripts{
    <script src="https://kit.fontawesome.com/b7938c82ea.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
    <link href="~/css/jquery.contextMenu.css" rel="stylesheet" />
    <script src="~/js/jquery.contextMenu.js"></script>
    <script src="~/js/jquery.ui.position.js"></script>
    <link href="~/css/jquery-confirm.min.css" rel="stylesheet" />
    <script src="~/js/jquery-confirm.min.js"></script>
    <script src="~/js/product.js"></script>
}